<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_utis_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/title_emergency"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="430dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#EEEEEE"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textSize="20dip" >
                </TextView>

                <EditText
                    android:id="@+id/edit_member_name"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:text="조종식"
                    android:textSize="20dip" >
                </EditText>

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="0dip"
                    android:text="차량번호"
                    android:textColor="#000000"
                    android:textSize="20dip" >
                </TextView>

                <EditText
                    android:id="@+id/edit_member_mobile"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="40누 5397"
                    android:textSize="20dip" >
                </EditText>
            </LinearLayout>

            <ImageView
                android:layout_width="680dip"
                android:layout_height="2px"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_bar" >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    android:text="사고장소"
                    android:textColor="#000000"
                    android:textSize="20dip" >
                </TextView>

                <EditText
                    android:id="@+id/edit_accident_location"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="대전시 유성구 노은동 한밭대로"
                    android:textSize="20dip" >
                </EditText>

                <Button
                    android:id="@+id/btn_emg_location"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    android:gravity="center"
                    android:text="선택"
                    android:textSize="12dip" >
                </Button>
            </LinearLayout>

            <ImageView
                android:layout_width="680dip"
                android:layout_height="2px"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_bar" >
            </ImageView>

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="0dip"
                android:text="사고유형"
                android:textColor="#000000"
                android:textSize="20dip" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/chk_1"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:text="1. 차량사고"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_2"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="2. 기상관련"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_3"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:text="3. 기후/고장"
                    android:textSize="17dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/chk_4"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:text="4. 차량화재"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_5"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="5. 장애물"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_6"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:text="6.위험물방출"
                    android:textSize="17dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/chk_7"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:text="7. 지진"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_8"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="8. 산사태"
                    android:textSize="17dip" />

                <CheckBox
                    android:id="@+id/chk_9"
                    android:layout_width="135dip"
                    android:layout_height="wrap_content"
                    android:text="9. 홍수"
                    android:textSize="17dip" />
            </LinearLayout>

            <ImageView
                android:layout_width="680dip"
                android:layout_height="2px"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_bar" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="430dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_emg_ok_send"
                android:layout_width="250dip"
                android:layout_height="50dip"
                android:layout_marginRight="25dip"
                android:text="응급상황 전송"
                android:textSize="18dip" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>